<%- include("header"); %>
<div class="row">
    <div class="col">
        <p class="custom">Transaction History</p>
        <table class="table table-bordered col22">
            <thead>
                <tr>
                    <th scope="col" class="disp">User ID</th>
                    <th scope="col">Sender</th>
                    <th scope="col" class="disp">User ID</th>
                    <th scope="col">Receiver</th>
                    <th scope="col">Amount</th>
                    <th scope="col" class="disp">Transaction Time</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <% newTransaction.forEach(function(transaction) { %>
                <tr class="hovera">
                    <th scope="row" class="disp"><%= transaction.Customer_ID1 %></th>
                    <td><%= transaction.Name1 %></td>
                    <th scope="row" class="disp"><%= transaction.Customer_ID2 %></th>
                    <td><%= transaction.Name2 %></td>
                    <td>â‚¹ <%= transaction.Debit %></td>
                    <td class="disp"><%= transaction.Time %></td>
                    <% if(transaction.Status === "Success") { %>
                    <td style="color: green; font-weight: 600;"><%= transaction.Status %></td>
                    <% } else { %>
                    <td style="color:red; font-weight: 600;"><%= transaction.Status %></td>
                    <% } %>
                </tr>
                <%  }) %>
            </tbody>
        </table>
    </div>
</div>
</div>
</body>
<script>
    document.onreadystatechange = function () {
        if (document.readyState !== "complete") {
            document.querySelector(
                "body").style.visibility = "hidden";
            document.querySelector(
                "#loader").style.visibility = "visible";
        } else {
            document.querySelector(
                "#loader").style.display = "none";
            document.querySelector(
                "body").style.visibility = "visible";
        }
    };
</script>

</html>